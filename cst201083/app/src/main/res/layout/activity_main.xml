<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/headingLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grade Calculator"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#005F69"
        android:layout_marginBottom="50dp"/>

    <TextView
        android:id="@+id/marksLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Your Marks:"
        android:layout_marginBottom="8dp"
        android:textSize="18sp"
        />

    <EditText
        android:id="@+id/marksInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_marginBottom="16dp"
        />

    <Button
        android:id="@+id/calculateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate Grade"
        android:layout_marginBottom="16dp"
        android:textSize="18sp"
        android:backgroundTint="#005F69"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/gradeOutput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textStyle="bold" />

</LinearLayout>